<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_font_info.xml
     تصميم نافذة عرض معلومات الخط
     
     يتبع نمط OneUI في عرض المعلومات بشكل منظم باستخدام:
     - Separator لتقسيم الأقسام
     - RoundLinearLayout لعرض المحتوى
     - CardView لعرض كل معلومة
-->
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="always"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingBottom="8dp">

        <!-- قسم المعلومات الأساسية -->
        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_info_basic" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <!-- الاسم الكامل -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_full_name"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_full_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- خط فاصل -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?android:attr/listDivider" />

            <!-- اسم العائلة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_family_name"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_family_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- خط فاصل -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?android:attr/listDivider" />

            <!-- النمط -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_style"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_style_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <!-- قسم التفاصيل التقنية -->
        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_info_technical" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical">

            <!-- الإصدار -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_version"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_version_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- خط فاصل -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?android:attr/listDivider" />

            <!-- نوع الخط (Variable/Static) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_type"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Static Font"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

        <!-- قسم معلومات المصمم -->
        <dev.oneuiproject.oneui.widget.Separator
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_info_designer_info" />

        <dev.oneuiproject.oneui.widget.RoundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/oui_background_color"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- المصمم -->
            <LinearLayout
                android:id="@+id/font_info_designer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_designer"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_designer_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- خط فاصل (يظهر فقط إذا كان المصمم موجود) -->
            <View
                android:id="@+id/font_info_designer_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?android:attr/listDivider"
                android:visibility="gone" />

            <!-- حقوق النشر -->
            <LinearLayout
                android:id="@+id/font_info_copyright_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_copyright"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_copyright_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- خط فاصل (يظهر فقط إذا كان حقوق النشر موجود والوصف موجود) -->
            <View
                android:id="@+id/font_info_copyright_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="?android:attr/listDivider"
                android:visibility="gone" />

            <!-- الوصف -->
            <LinearLayout
                android:id="@+id/font_info_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="?attr/listChoiceBackgroundIndicator"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/font_info_description"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/font_info_description_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </dev.oneuiproject.oneui.widget.RoundLinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
