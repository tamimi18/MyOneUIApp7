<?xml version="1.0" encoding="utf-8"?>
<!-- 
    ملف Menu الرئيسي للتطبيق
    
    هذا الملف يُستخدم في MainActivity ويحتوي على الأيقونات التي تظهر
    في الزاوية العلوية من الشاشة (في Toolbar أو AppBar)
    
    الفكرة الأساسية:
    نُعرّف هنا جميع الأيقونات الممكنة، لكن نتحكم بظهورها/إخفائها
    من خلال onPrepareOptionsMenu() في MainActivity
-->
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 
        أيقونة معلومات الخط
        
        الخصائص:
        - id: معرّف فريد نستخدمه في MainActivity للوصول لهذا العنصر
        - icon: أيقونة المعلومات من مكتبة OneUI Icons
        - title: نص بديل (للوصولية - accessibility)
        - showAsAction: always تعني "اعرض دائماً كأيقونة وليس في قائمة overflow"
        - visible: false افتراضياً (سنغيره في onPrepareOptionsMenu)
        
        ملاحظة مهمة:
        استخدمنا ic_oui_info_outline بدلاً من ic_oui_info لأنه يبدو أفضل
        ويتماشى مع تصميم One UI الذي يفضل الأيقونات الـ outline
    -->
    <item
        android:id="@+id/menu_font_info"
        android:icon="@drawable/ic_oui_info"
        android:title="@string/menu_font_info"
        android:visible="false"
        app:showAsAction="always" />

</menu>
