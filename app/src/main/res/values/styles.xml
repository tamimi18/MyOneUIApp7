<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="appFontFamily" format="reference" />

    <style name="AppTextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/appFontFamily</item>
    </style>

    <style name="AppTextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/appFontFamily</item>
    </style>

    <!-- Overlay: WP -->
    <style name="AppFontOverlay_WP">
        <item name="appFontFamily">@font/wp_rglr</item>
    </style>

    <!-- Overlay: Samsung One -->
    <style name="AppFontOverlay_Samsung">
        <item name="appFontFamily">@font/samsung_one</item>
    </style>
</resources>
